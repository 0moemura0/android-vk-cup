<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/purple_500</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/selector_bg_card</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CreatorHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/vk_sans_text</item>
    </style>
    <style name="CreatorHeader.Shadowed">
        <item name="android:shadowColor">#14000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="CreatorBody">
    <item name="android:textSize">13sp</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:shadowColor">#14000000</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">2</item>
    <item name="android:fontFamily">@font/vk_sans_text</item>
    <item name="android:shadowRadius">4</item>
</style>
    <style name="NewsTitle">
        <item name="android:fontFamily">@font/vk_sans_display</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="NewsTitle.Black">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextPost">
        <item name="android:fontFamily">@font/vk_sans_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="BottomPanelText">
        <item name="android:fontFamily">@font/vk_sans_text</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:textColor">#99FFFFFF</item>
</style>
</resources>
